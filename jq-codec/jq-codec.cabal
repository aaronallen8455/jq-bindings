extra-source-files: CHANGELOG.md

library
  hs-source-dirs: src
  default-language: Haskell2010
  build-depends: base
               , jq-bindings-core
               , bytestring
               , linear-base
               , text
  exposed-modules: Jq.Decode
                 , Jq.Encode

