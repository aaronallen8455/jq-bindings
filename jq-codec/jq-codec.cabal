    default-language: Haskell2010

test-suite spec
  type: exitcode-stdio-1.0
  hs-source-dirs: test
  main-is: Spec.hs
  build-depends: QuickCheck
               , linear-base
               , base
               , quickcheck-instances
               , tasty-quickcheck
               , tasty
               , text
               , bytestring
               , jq-codec
  default-language: Haskell2010
